                        <form class="form" id="form" action="/submit-form" method="POST">
                            <div class="u-margin-bottom-medium">
                                <h2 class="heading-secondary">
                                    questions?
                                </h2>
                            </div>
                            <div id="form-prev" class="">
                                <div class="form__group">
                                    <input type="text" class="form__input" placeholder="Full name" id="name" required name="fullname">
                                    <label for="name" class="form__label">Full name</label>
                                </div>

                                <div class="form__group">
                                    <input type="email" class="form__input" placeholder="Email address" id="email" required name="email">
                                    <label for="email" class="form__label">Email address</label>
                                </div>

                                <div class="form__group u-margin-bottom-medium">
                                    <div class="form__radio-group">
                                        <input type="radio" class="form__radio-input" value="App Issues" id="small" name="reason">
                                        <label for="small" class="form__radio-label">
                                            <span class="form__radio-button"></span>
                                            App Related
                                        </label>
                                    </div>

                                    <div class="form__radio-group">
                                        <input type="radio" class="form__radio-input" value="Business" id="large" name="reason">
                                        <label for="large" class="form__radio-label">
                                            <span class="form__radio-button"></span>
                                            Business Request
                                        </label>
                                    </div>
                                </div>

                                <div class="form__group">
                                    <a class="btn btn--green" id="btn-next" onclick="checkEntry()">Next &rArr;</a>
                                </div>
                            </div>
                            <div id="form-next" class="">
                                <div class="form__group">
                                    <textarea type="text" class="form__textarea" placeholder="Message" id="message" rows="6" cols="25" required name="message"></textarea>
                                    <label for="name" class="form__label">Message</label>
                                </div>
                                <div class="u-inline">
                                    <div class="form__group">
                                        <a class="btn btn--green" id="btn-prev" onclick="runPrev()">&lArr; Prev</a>
                                    </div>
                                    <div class="form__group u-margin-left">
                                        <button class="btn btn--green" id="btn-submit" type="submit">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="u-hide">
                            <div class="" id="sucess">
                                <div class="u-margin-bottom-medium">
                                    <h2 class="heading-secondary">
